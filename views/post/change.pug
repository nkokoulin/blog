html
	head
	body
		form(action='/admin/change/'+post.id, method='post')
			input(type='text', value=post.title, name='title', placeholder='Заголовок', required)
			textarea(name='content', placeholder='Содержание поста', required)= post.content
			select(name='publishStatus', required)
				each status in statuses
					option(value=status.id)= status.label
			input(type='submit', value='Изменить запись')